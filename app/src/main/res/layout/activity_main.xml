<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_install_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="installApk"
        android:text="Install All apk" />

    <Button
        android:id="@+id/btn_install_feature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="installApk"
        android:text="Install Feature1" />

    <Button
        android:id="@+id/btn_install_feature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="installApk"
        android:text="Install Feature2" />
</LinearLayout>